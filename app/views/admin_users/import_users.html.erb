<%= form_for("users", url: admin_import_users_path, :html => { :class => "form-horizontal col-md-9 col-lg-6" } ) do |f| %>

  <% if flash[:errors] != []  && flash[:errors] != nil%>
      <div class="alert alert-danger">
      <% flash[:errors].each do |error| %>
          <li><%= error %></li>
      <% end %>
      </div>
  <% end %>
  <div class="form-group">
    <%= f.label :emails, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :emails, class: 'form-control input-xxlarge' %>
      <div class="help-block">seperate each email by a comma or newline</div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
    &nbsp; &nbsp;
  </div>

<% end %><!-- form -->
